<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gavynzhang.precomuptedtextviewtest.ui.NormalTextActivity">

    <Button
        android:id="@+id/normal_start_scroll_down"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="start_scroll_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/norman_recycler_view"
        android:layout_below="@+id/normal_start_scroll_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</RelativeLayout>
